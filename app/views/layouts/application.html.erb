<body><body ng-app="myApp">
  <section>
    <div class="container">
      <h1>Contact Display Map</h1>

      <ui-view></ui-view>

      <script type="text/ng-template" id="/home.html">
        <section class="row">
          <div class="col-md-12">
            <p>This is a page that lets you see your contacts and meeting times in their local timezones on Google Maps.</p>

            <form ng-submit="login()"
              style="margin-top:30px;">

              <h3>Username</h3>
              <div class="form-group">
                <input type="text"
                class="form-control"
                placeholder="Username"
                ng-model="username"></input>
              </div>

              <h3>Password</h3>
              <div class="form-group">
                <input type="password"
                class="form-control"
                placeholder="Password"
                ng-model="password"></input>
              </div>
              <button type="submit" class="btn btn-primary">Post</button>
            </form>
          </div>
        </section>
      </script>

      <script type="text/ng-template" id="/addContacts.html">
        <section class="row">
          <div class="col-md-12">
            <form ng-submit="addContact()">
              <div class="col-md-4">
                <h3>Name</h3>
                <div class="form-group">
                  <input type="text"
                  class="form-control"
                  placeholder="Jane Jones"
                  ng-model="name"></input>
                </div>
              </div>
              <div class="col-md-4">
                <h3>Location</h3>
                <div class="form-group">
                  <input type="text"
                  class="form-control"
                  placeholder="Dallas, TX"
                  ng-model="location"></input>
                </div>
              </div>
              <div class="col-md-4">
               <h3>Timezone</h3>
               <timezone-selector ng-model="timezone">
              </div>
              <div class="col-md-4 pull-left"
                   style="margin-top:30px;">
                <button type="submit" class="btn btn-primary">Add Contact</button>
              </div>
            </form>
          </div>
        </section>
      </script>

      <script type="text/ng-template" id="/mapView.html">
        <section class="row">

          <div class="col-md-12">
            <table class="table">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Location</th>
                  <th>Contact's Time Now</th>
                  <th>Next Meeting My Time</th>
                  <th>Next Meeting Contact's Time</th>
                </tr>
              </thead>
              <tbody>
                <tr ng-repeat="result in user | orderBy: 'name'">
                  <td><a href="">{{result.name}}</a></td>
                  <td>{{result.location}}</td>
                  <td>{{result.time}}</td>
                  <td>{{result.meetingTime}}</td>
                  <td>{{result.contactMeetingTime}}</td>

                </tr>
              </tbody>
            </table>
            <div class="buttons-container">
              <button ng-click="setUser('Luke')">Luke Cage</button>
              <button ng-click="setUser('Linda')">Linda Carter</button>
            </div>
          </div>
          <section class="row">
            <div class="col-md-12">
              <div id="googleMap" class="img-responsive center-block" style="width:90%;height:500px;"></div>
            </div>
          </section>
        </section>
      </script>

    </div>
  </section>
